@import '~assets/css/variables'
@import '~assets/css/mixins'
@import '~assets/css/effects'

html
  overflow hidden !important

  *
    box-sizing border-box
    margin 0

  body
    width 100%
    height 100%
    margin 0
    padding 0
    font-size 16px
    font-family Roboto, serif
    overflow hidden

    .full-width
      width 100%

    .full-height
      height 100%

    .row
      display flex
      flex-direction row

    .column
      display flex
      flex-direction column

    .center
      display flex
      align-items center
      justify-content center

    .button
      min-width 48px
      height 48px
      background-color #ffffff
      border-radius 6px
      display flex
      align-items center
      justify-content center
      text-transform uppercase
      font-size: 18px
      padding 16px
      transition box-shadow 0.3s, background-color 0.2s
      white-space nowrap
      color #607D8B
      user-select none
      cursor pointer

      &.button--active, &:hover
        background-color #ff00cc
        font-weight bold
        box-shadow 0 0 5px #000000
        color #000

    .simplebar-track
        pointer-events all
      
    .simplebar-scrollbar:before
      background #fff